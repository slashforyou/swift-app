{
  "expo": {
    "name": "Swift App",
    "slug": "swiftapp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "swiftapp",
    "userInterfaceStyle": "automatic",
    "entryPoint": "App.tsx",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#7E3AF2"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.slash4u.swiftapp",
      "buildNumber": "1"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.slash4u.swiftapp",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#7E3AF2"
      }
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "extra": {
      "APP_ENV": "development",
      "eas": {
        "projectId": "197a33fd-1b2f-4c2e-b51b-b3ff8f976a80"
      }
    },
    "plugins": [
      "expo-secure-store",
      "expo-font",
      "expo-web-browser",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.slash4u.swiftapp",
          "enableGooglePay": true
        }
      ]
    ],
    "owner": "slash4u"
  }
}
